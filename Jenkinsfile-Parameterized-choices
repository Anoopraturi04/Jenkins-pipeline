pipeline{

    agent any

    tools{
        maven 'mymaven'
    }
    parameters{
        choice(name: 'ENV',choices: ['','Dev','Test'],description:'Select the enviornment')
    }

    stages{
        stage('Build on Dev ENV'){
            when{
                expression{
                  params.ENV == 'Dev'
                }
            }   
            steps{
              git 'https://github.com/Sonal0409/DevOpsCodeDemo.git'
              sh 'mvn clean package'
            }
        }
        
        stage('Test on Test ENV'){
            when{
               expression{
                 params.ENV == 'Test'
               }
            }
            steps{
              git 'https://github.com/Sonal0409/DevOpsCodeDemo.git'
              sh 'mvn pmd:pmd'
              sh 'mvn test'  
            }
        }
    }
}