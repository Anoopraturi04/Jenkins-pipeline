pipeline{
     
    agent any

    tools{
        maven 'mymaven'
    }

    stages{
        stage('Parallel Stages'){
            parallel{
                  stage('Compile Code'){
                    steps{
                    git 'https://github.com/Sonal0409/DevOpsCodeDemo.git'
                    sh 'mvn compile'
                    }
                   }
                  stage('Review the code'){
                    steps{
                    git 'https://github.com/Sonal0409/DevOpsCodeDemo.git'
                    sh 'mvn pmd:pmd'
                    }
                  }
                }    
            } 
        }
}    