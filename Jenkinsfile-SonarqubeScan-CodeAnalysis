pipeline{
    agent any
    tools{
        maven 'mymaven'
    }
    stages{
        stage('Checkout Code'){
           steps{
               git 'https://github.com/demo1orgtoday/SonarQubeCoverageJava.git'
            }
        }
        stage('Build code'){   
            steps{
                sh 'mvn package'
            }
        }
        stage('SonarScan'){
           environment{
              scannerHome = tool 'sonartool'
           }
           steps{
              withSonarQubeEnv('mysonar'){
                   sh '''
                    ${scannerHome}/bin/sonar-scanner \
                    -Dsonar.projectKey=sonar-demo-ar-jenkins-github_sonar-demo-ar-jenkins-github-projrct \
                    -Dsonar.java.binaries=target/classes \
                    -Dsonar.organization=sonar-demo-ar-jenkins-github
                   '''
                }
            }
        }
    }
}